#include <stdio.h>
 
/*
i chạy từ 0 đến n - 1: đại diện cho từng hàng.

j < n - i: in khoảng trắng để căn giữa dòng i.

m = 2 * i + 1: số lượng dấu * ở dòng thứ i.

k <= m: in các dấu * liên tiếp.
*/
int main () {
  int i, j, n, m, k;
  printf ("Nhap vao so hang: "); scanf ("%d", &n);

  for (i = 0; i < n; i++) {
    for (j = 1; j < n - i; j ++){
        printf (" ");
    }
    m = 2*i + 1;
    for (k = 1; k <= m; k++){
        printf ("*");
    }
    printf ("\n");
  }
}
