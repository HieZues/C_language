tá»•ng 1 + 1/2 +.. + 1/n
#include <stdio.h>

int main (){
  float s = 1;
  int n, i;
  do {
    printf ("Nhap n chan: ");
    scanf ("%d", &n);
    if (n % 2 != 0) {
        printf ("Nhap n kh hop le. Vui long nhap n la so chan!");
    }
  }while ( n % 2 != 0);
  for (i = 2; i <= n; i += 2 ) {
    s = s + 1.0/i;
  } printf ("Tong s = %.2f", s);
}
