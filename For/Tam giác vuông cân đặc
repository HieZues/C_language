#include <stdio.h>

int main (){
   int i, j, h;
   do {
       printf ("Nhap vao chieu cao cua tam giac: ");
       scanf ("%d", &h);
      if (h <= 0) {
        printf ("Chieu cao khong hop le. Vui long nhap lai!\n");
      }
   }
   while (h <= 0);

  for (i = 1; i <= h; i ++){
    for (j = 1; j <= i; j++) {
        printf (" * ");
    }
    printf ("\n");
  }


}
