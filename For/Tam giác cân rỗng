#include <stdio.h>

int main () {
  int i, j, n, m, k;
  printf ("Nhap vao so hang: "); scanf ("%d", &n);

  for (i = 0; i < n; i++) {
    for (j = 1; j < n - i; j ++){
        printf (" ");
    }
    m = 2*i + 1;
    for (k = 1; k <= m; k++){
            if (i < n - 1){
                if (k == 1 || k == m) {
                    printf ("*");
                }
                else {
                    printf (" ");
                }
            }
            else if (i == n -1) {
        printf ("*");
    }
  }
   printf ("\n");
  }
}

