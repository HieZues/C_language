#include <stdio.h>

int main (){
   char kitu;
   printf ("nhap vao ki tu: ");
   scanf ("%c", &kitu);

   if (kitu >= 'a' && kitu <= 'z') {
     kitu = kitu - 32 ; // công thức đổi từ chữ thường-> hoa luôn đúng, đổi từ hoa-> thường thì +32
     printf ("ki tu hoa: %c", kitu);
   }
   else {
    printf ("ki tu vua nhap la: %c", kitu);
   }
}
